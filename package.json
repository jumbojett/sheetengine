{
  "name": "sheetengine",
  "version": "2.0.0",
  "description": "Isometric HTML5 JavaScript Display Engine",
  "main": "dist/sheetengine.js",
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "serve": "npx http-server . -p 8080 -c-1",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "isometric",
    "3d",
    "canvas",
    "graphics",
    "engine"
  ],
  "author": "Levente Dobson",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.2.0",
    "jsdom": "^27.0.1",
    "rollup": "^4.9.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/normanzb/sheetengine"
  }
}
